{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "sourceMap": true,
        "jsx": "react-jsx",
        "strict": true,
        "outDir": "./dist",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types", "./src/client/@types"]
    },
    "include": ["src/client/**/*"]
}
